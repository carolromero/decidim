<%= decidim_form_for(@form, url: deliver_newsletter_path(@newsletter),method: :post, html: { class: "form new_newsletter_deliver" }) do |f| %>
  <div class="card">

    <div class="card-divider">
      <h2 class="card-title"><%= t ".title" %></h2>
    </div>
    <div class="card-section">
      <ul class="accordion" data-accordion data-multi-expand="true" data-allow-all-closed="true">
        <li class="accordion-item is-active" data-accordion-item>
          <a href="#" class="accordion-title">Espais</a>
          <div class="accordion-content" data-tab-content>
            <%= participatory_spaces_for_select f %>
          </div>
        </li>
        <li class="accordion-item" data-accordion-item>
          <a href="#" class="accordion-title">Followers o Participants</a>
          <div class="accordion-content" data-tab-content>
            <div class="grid-x grid-padding-x">
              <div class="cell small-6 medium-2">
                <%= f.check_box :send_to_followers, label: "Followers", checked: true %>
              </div>
              <div class="cell small-6 medium-2">
                <%= f.check_box :send_to_participants, label: "Participants", checked: true %>
              </div>
            </div>
          </div>
        </li>
        <% if current_user.admin? %>
          <li class="accordion-item" data-accordion-item>
            <a href="#" class="accordion-title">Scopes</a>
            <div class="accordion-content" data-tab-content>
              <%= render partial: "scopes", locals: { scopes: @form.scopes, f: f } %>
            </div>
          </li>
        <% end %>
      </ul>

      <!-- Aquesta selecciÃ³ s'envia a tants emails: X -->
      <div class="button--double form-general-submit">
        <% if allowed_to?(:update, :newsletter, newsletter: @newsletter) && !@newsletter.sent? %>
        <%= link_to t("actions.edit", scope: "decidim.admin"), ["edit", @newsletter], class: "button" %>
        <% end %>
        <% unless @newsletter.sent? %>
        <%#= link_to t(".deliver"), deliver_newsletter_path(@newsletter), method: :post, class: "button alert", data: { confirm: t(".confirm_deliver") } %>
        <%= f.submit t(".deliver"),  class: "button alert", data: { confirm: t(".confirm_deliver") } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
