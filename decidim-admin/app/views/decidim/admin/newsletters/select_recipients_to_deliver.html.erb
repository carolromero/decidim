<%= decidim_form_for(@form, url: deliver_newsletter_path(@newsletter), method: :post, html: { class: "form newsletter_deliver" }) do |f| %>
  <div class="card">

    <div class="card-divider">
      <h2 class="card-title"><%= t ".title" %></h2>
    </div>
    <div class="card-section">
      ALERT:!!!       TINGUES EN COMPTE QUE NOMÉS S'ENVIARAN A AQUELLS USUARIS QUE TINGUIN LA RECEPCIÓ D'EMAILS ACTIVADA
      <div class="card">
        <div class="card-divider">
          <h2 class="card-title">Selecciona a quins usuaris vols enviar la newsletter</h2>
        </div>
        <div class="card-section">
          <div class="row">
            <% if current_user.admin? %>
              <div class="grid-x grid-padding-x">
                <div class="cell small-12" id="send_newsletter_to_all_users">
                  <%= f.check_box :send_to_all_users, label: "Send to all Users" %>
                </div>
              </div>
              <hr class="reset mt-s mb-s" />
            <% end %>
            <div class="grid-x grid-padding-x">
              <div class="cell small-4 medium-2" id="send_newsletter_to_followers">
                <%= f.check_box :send_to_followers, label: "Followers" %>
              </div>
              <div class="cell small-4 medium-2" id="send_newsletter_to_participants">
                <%= f.check_box :send_to_participants, label: "Participants" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card" id="participatory_spaces_for_select">
        <div class="card-divider">
          <h2 class="card-title">Selecciona els espais</h2>
        </div>
        <div class="card-section">
          <div class="row" >
            <%= participatory_spaces_for_select f %>
          </div>
        </div>
      </div>

      <% if current_user.admin? %>
        <div class="card">
          <div class="card-divider">
            <h2 class="card-title">Selecciona els interessos per segmentar més la newsletter</h2>
          </div>
          <div class="card-section">
            <div class="row" >
              <%= scopes_picker_filter f, :scope_ids %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Aquesta selecció s'envia a tants emails: X -->
      <div class="button--double form-general-submit">
        <% if allowed_to?(:update, :newsletter, newsletter: @newsletter) && !@newsletter.sent? %>
          <%= link_to t("actions.edit", scope: "decidim.admin"), ["edit", @newsletter], class: "button" %>
        <% end %>
        <% unless @newsletter.sent? %>
        <%= f.submit t(".deliver"),  class: "button alert", data: { confirm: t(".confirm_deliver") } %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <% console %>

<%= javascript_include_tag "decidim/admin/newsletters" %>
